{
    "env": {
		"node": true,
        "es2021": true
    },
    "extends": [
		"eslint:recommended"
	],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
	},
    "rules": {
		"indent": [
            "warn",
            "tab"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
		]
    }
}
